<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navTitleBarBox"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <RelativeLayout
        android:id="@+id/leftButton"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@drawable/nav_bar_button"
        android:clickable="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/leftButtonIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/nav_bar_menu" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/leftBox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"></RelativeLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="#fff"
        android:textSize="16dp" />

    <com.sn.controlers.SNImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        app:adjustWidth="true" />

    <RelativeLayout
        android:id="@+id/rightButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/nav_bar_button"
        android:clickable="true"
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/rightButtonIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/nav_bar_menu"
            android:visibility="gone" />

        <TextView
            android:id="@+id/rightButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#fff"
            android:textSize="16dp"
            android:visibility="gone" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rightBox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"></RelativeLayout>

</RelativeLayout>