<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"

    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivActionImage"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/ivActionImage"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:textColor="#3d3d3d"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/ivArrowRight"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/right_bababa" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/ivArrowRight"
        android:textColor="#ed6004"
        android:textSize="12dp" />

    <LinearLayout
        android:id="@+id/viewSplit"
        style="@style/VerticalSplit"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"></LinearLayout>
</RelativeLayout>